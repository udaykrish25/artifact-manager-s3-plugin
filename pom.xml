<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.jenkins.plugins</groupId>
  <artifactId>artifact-manager-s3</artifactId>
  <version>1.0-alpha-1-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <name>Artifact Manager on S3 plugin</name>
  <description>Jenkins plugin to store build artifacts on Amazon S3</description>
  <url>https://github.com/jenkinsci/artifact-manager-s3-plugin</url>

  <properties>
    <java.level>8</java.level>
    <jenkins.version>2.426.2</jenkins.version>
    <hpi-plugin.version>3.25</hpi-plugin.version>
  </properties>

  <dependencies>
    <!-- your dependencies here -->
  </dependencies>

  <build>
    <plugins>
      <!-- Completely disable inherited enforcer rules -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>override-parent</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules/>
              <fail>false</fail>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.jenkins-ci.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
        <version>${hpi-plugin.version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </pluginRepository>
  </pluginRepositories>

  <developers>
    <developer>
      <id>your-id</id>
      <name>Your Name</name>
      <email>your@email.com</email>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>The MIT License</name>
      <url>http://opensource.org/licenses/MIT</url>
    </license>
  </licenses>
</project>

